// Font-size and line-height

  $base-size: 16px;
  $base-height: 1.4;



/* -------------------------------------
 * Colors
 * ------------------------------------- */
// Scheme

  $brand-color: #D23333;

  $red: #EE5F5B;
  $blue: #469AE0;
  $yellow: #FDB631;
  $orange: #E67E22;
  $green: #32B796;
  $gray: #000000;



/* -------------------------------------
 * Compenent Size Variables
 * ------------------------------------- */

  $navbar-height: 70px; // change
  $sub_navbar-height: 70px; // change
  $dashboard-cta-height: 100px;
  $show-banner-height: 70vh;
  $basic-banner-height: 50vh;
  $footer-height: 300px; // change


/* -------------------------------------
 * Dashboard Layout Variables
 * ------------------------------------- */

  // different for the left container depending on existence of cta or not

  $dashboard-content-height-simple: calc(100vh - #{$navbar-height});

  $dashboard-content-right-height: calc(100vh - #{$navbar-height} - #{$sub_navbar-height});

  $dashboard-content-left-height: calc(100vh - #{$navbar-height} - #{$sub_navbar-height} - #{$dashboard-cta-height});

  $dashboard-content-left-height-no-sub_navbar: calc(100vh - #{$navbar-height} - #{$dashboard-cta-height});

  $dashboard-content-left-bottom-position: $dashboard-cta-height;


/* -------------------------------------
 * Show Layout Variables
 * ------------------------------------- */

  $show-content-position: calc(#{$show-banner-height} + #{$navbar-height});

/* -------------------------------------
 * Basic Layout Variables
 * ------------------------------------- */

  $basic-content-position: calc(#{$basic-banner-height} + #{$navbar-height});
